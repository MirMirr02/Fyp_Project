<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             BackgroundColor="#fadfd9"
             NavigationPage.HasNavigationBar="False"
             x:Class="Fyp_Project.View.Profile">

    <StackLayout >
        <StackLayout Padding="100">
            <Frame 
       BorderColor="Black"
       Padding="2"
       CornerRadius="50"
       HeightRequest="100"
       WidthRequest="100"
       IsClippedToBounds="True"
       HorizontalOptions="Center"
       VerticalOptions="Center">
                <Frame Margin="1" CornerRadius="50" Padding="0">
                    <Image x:Name="ProfileEntry" Source="profile.png"
         Aspect="AspectFill"/>
                </Frame>
            </Frame>
        </StackLayout>
        <Frame BackgroundColor="#ECF0F1" HeightRequest="200" HasShadow="True" Padding="0" Margin="40,-50,40,0" Opacity="0.9" CornerRadius="30">
            <StackLayout>
                <Label x:Name="Name" Text="(Name Here)" TextColor="Black" FontSize="20" FontAttributes="Bold"
                    HorizontalOptions="CenterAndExpand" Padding="0" Margin="40"/>
                <Label x:Name="Phone" Text="(Phone Number Here)" TextColor="Black" FontSize="20" FontAttributes="Bold"
                    HorizontalOptions="CenterAndExpand" Padding="0" Margin="0"/>
            </StackLayout>
        </Frame>

    </StackLayout>
</ContentPage>